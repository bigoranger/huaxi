@model huaxi.Areas.Admin.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="main" class="container">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default login-panel">
            <div class="panel-body">
                <div class="modal-header">
                    <h4>管理后台登录</h4>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="modal-body">
                        <div class="row form-group">
                            <div class="col-sm-12">
                                @Html.ValidationMessageFor(model => model.Name)
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control none-radius", required = "required", placeholder = "账号" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-12">
                                @Html.ValidationMessageFor(model => model.Name)
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control none-radius", required = "required", placeholder = "密码" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-12">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="isRemember" value="true">
                                        记住我
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="pull-right">
                            <button class="btn btn-large btn-primary" type="submit">进入</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

