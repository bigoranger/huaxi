@model huaxi.Areas.Admin.Models.RegisterModel

@{
    ViewBag.Title = "注册新用户";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div id="main" class="container">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default login-panel">
            <div class="panel-body">
                <div class="modal-header">
                    <h4>注册</h4>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="modal-body">
                        <div class="row form-group">
                            <div class="col-sm-12">
                                @Html.ValidationMessageFor(model => model.UserName)
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control none-radius", required = "required", placeholder = "账号" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-12">
                                @Html.ValidationMessageFor(model => model.Password)
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control none-radius", required = "required", placeholder = "密码" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-12">
                                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control none-radius", required = "required", placeholder = "确认密码" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-12">
                                <img src="YZM" alt="验证码" />
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-12">
                                @Html.ValidationMessageFor(model => model.YZM)
                                @Html.TextBoxFor(model => model.YZM, new { @class = "form-control none-radius", required = "required", placeholder = "验证码" })
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="pull-right">
                            <button class="btn btn-large btn-primary" type="submit">注册</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

